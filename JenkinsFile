pipeline {
    agent {
        docker {
            image 'violinist999/maven-aws:latest' // has AWS CLI preinstalled
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {

        stage('Checkout') {
            steps {
                sh 'echo "passed"'
                // git branch: 'main', url: 'https://github.com/aggviolinist/drive-fund'
            }
        }

        stage('AWS Validation') {
            steps {
                withAWS(credentials: 'aws-jenkins-creds', region: 'us-east-1') {
                    sh '''
                        aws --version
                        aws sts get-caller-identity
                    '''
                }
            }
        }

        stage('Build and Test') {
            steps {
                withAWS(credentials: 'aws-jenkins-creds', region: 'us-east-1') {
                    sh 'aws sts get-caller-identity'
                }
                sh 'ls -ltr'
                sh 'mvn -B clean package'
            }
        }

        stage('Static Code Analysis') {
            steps {
                sh 'echo "SonarQube analysis placeholder"'
                sh 'echo "This stage will be updated later"'
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "violinist999/ripper:${BUILD_NUMBER}"
                REGISTRY_CREDENTIALS = credentials('dockerhub-creds')
            }
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                    def dockerImage = docker.image("${DOCKER_IMAGE}")
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "drive-fund"
                GIT_USER_NAME = "aggviolinist"
            }
            steps {
                withCredentials([string(credentialsId: 'github-creds', variable: 'GITHUBTOKEN')]) {
                    sh '''
                        git config user.email "mulandimaei76@gmail.com"
                        git config user.name "aggviolinist"
                        sed -i "s/replaceThisImageTag/${BUILD_NUMBER}/g" kubernetes/deployment.yml
                        git add kubernetes/deployment.yml
                        git commit -m "Updated with the latest docker image version ${BUILD_NUMBER}"
                        git push https://${GITHUBTOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
                    '''
                }
            }
        }
    }
}
